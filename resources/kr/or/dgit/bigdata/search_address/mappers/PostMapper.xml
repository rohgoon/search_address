<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.dgit.bigdata.search_address.mappers.PostMapper">
	
	<select id="findAllBySidoAndDoro" parameterType="hashmap" resultType="Post">
		select zipcode, sido, sigungu, doro, building1, building2 from post where sido like #{sido} 
		<if test="doro != null">
			and doro like #{doro}
		</if>		
	</select>
</mapper>